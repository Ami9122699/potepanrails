
<header>
 <p class="post-title">スケジュール管理アプリ</p>
 </header>

 <div class="container">
 <div class="show-edit-title box post-box-left-new-edit-show"><h1>予定の新規追加</h1></div>
 </div>

<%= render "shared/error", obj: @post %>
<%= form_with model: @post do |f| %>

<% if flash[:notice] %>
    <p class="notice postbar"><%= flash[:notice] %></p>
    <% end %>

 <table class="edit-new-show-table">
     <tr>
       <th><%= f.label :title, "タイトル" %></th>
      <td><%= f.text_field :title, class: 'form-control', placeholder: "タイトル"      %></td>
     </tr>
     <tr>
      <th><%= f.label :start_at, "開始日" %></th>
      <td><%= f.date_field :start_at, class: "form-control-start-end-at" %></td>
    </tr>
     <tr>
       <th><%= f.label :end_at ,"終了日" %></th>
       <td><%= f.date_field :end_at, class: 'form-control-start-end-at' %></td>
     </tr>
 
     <tr>
       <th><%= f.label :all_day ,"終日"%></th>
       <td><%= f.check_box :all_day, class: 'form-control-all-day' %><p class="all-day">終日の場合はチェックを入れます</p></td>
     </tr>

      <tr>
       <th><%= f.label :memo ,"スケジュールメモ" %></th>
       <td><%= f.text_area :memo, class: 'form-control-memo', placeholder: "メモを入力する"     %></td>
     </tr>
   </table>

    <div class="container">
     <ul class="example">
       <li class="box post-box-right-new-show"><%= f.submit "保存", class: 'btn--yellow-new-edit' %></li>
       <li class="box post-box-left-new-show"><%= link_to "キャンセル", :posts, class: 'btn-cancel'  %></li>
     </ul>
    </div>
    
        
 <% end %>
  



  